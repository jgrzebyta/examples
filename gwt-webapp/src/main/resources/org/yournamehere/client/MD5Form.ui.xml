<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .title {
        font-size: large;
        }
    </ui:style>
    
    <g:VerticalPanel horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP">
        <g:Label text="New compute MD5sum" addStyleNames="{style.title}"/>
        <g:HorizontalPanel>
            <g:TextBox ui:field="messageBox" debugId="messageBox"/>
            <g:Button ui:field="button" debugId="button">Check</g:Button>
        </g:HorizontalPanel>
        
       <g:Label ui:field="response"/>
    </g:VerticalPanel>
</ui:UiBinder>