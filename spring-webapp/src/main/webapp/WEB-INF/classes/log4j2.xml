<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR">
    <Appenders>
        <Console name="Console" target="SYSTEM_ERR">
            <PatternLayout pattern="%d{ABSOLUTE} [%t] %-5p %c{1}: %m%throwable%n"/>
        </Console>
    </Appenders>
    
    <Loggers>
        <Logger name="com.github.jgrzebyta" level="info"/>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>